<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Título en la parte superior -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DaviTeca"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenedor para los botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón Libros -->
        <Button
            android:id="@+id/btnLibros"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:text="Libros"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            android:onClick="onLibrosClick" />

        <!-- Botón Reseñas -->
        <Button
            android:id="@+id/btnResenas"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:text="Reseñas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            android:onClick="onResenasClick" />

        <!-- Botón Leyendo -->
        <Button
            android:id="@+id/btnLeyendo"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:text="Leyendo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            android:onClick="onLeyendoClick" />

        <!-- Botón Salir -->
        <Button
            android:id="@+id/btnSalir"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:text="Salir"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_salir_background"
            android:textColor="@color/white"
            android:onClick="onSalirClick" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 